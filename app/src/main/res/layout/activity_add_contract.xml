<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".activity.AddContract">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/tv_Add_Contract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm Hợp Đồng Mới"
            android:background="@drawable/btn_room"
            android:padding="15dp"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin khách thuê"
            android:background="@drawable/btnlogin"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Họ và tên khách thuê"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>

        <EditText
            android:id="@+id/edt_id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Căn cước công dân"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>
        <EditText
            android:id="@+id/edt_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Số điện thoại"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>
        <EditText
            android:id="@+id/edt_birthdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Ngày sinh"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin hợp đồng"
            android:background="@drawable/btnlogin"
            android:padding="10dp"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edt_roomid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Phòng số:1"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>

        <EditText
            android:id="@+id/edt_startdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Ngày bắt đầu"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>

        <EditText
            android:id="@+id/edt_enddate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="12dp"
            android:hint="Ngày kết thúc"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:background="@drawable/btnlogin"/>

        <EditText
            android:id="@+id/edt_depositamount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnlogin"
            android:hint="Tiền cọc"
            android:inputType="number"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Lưu"
                android:textSize="25sp"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:backgroundTint="@color/yellow"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>