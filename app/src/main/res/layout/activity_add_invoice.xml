<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.AddInvoice">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo hóa đơn"
            android:gravity="center"
            android:background="@color/blue"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="12dp" />

        <!-- Phòng -->
        <TextView
            android:id="@+id/tvRoomNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng: 8"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textColor="@color/black"/>

        <!-- Mã hóa đơn -->
        <EditText
            android:id="@+id/etMaHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã hóa đơn"
            android:inputType="text"
            android:enabled="false"/>

        <EditText
            android:id="@+id/etMaKhach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã Khách thuê: 1"
            android:inputType="text"
            android:enabled="false"
            android:paddingTop="8dp"/>

        <!-- Ngày tạo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp">

            <ImageButton
                android:id="@+id/btnChonNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calender"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Chọn ngày" />

            <EditText
                android:id="@+id/etNgayTao"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="dd/mm/yyyy"
                android:focusable="false" />
        </LinearLayout>

        <EditText
            android:id="@+id/etTienNha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tiền nhà"
            android:inputType="number" />

        <!-- Số điện -->
        <EditText
            android:id="@+id/etSoDien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số điện"
            android:inputType="number" />

        <!-- Số nước -->
        <EditText
            android:id="@+id/etSoNuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số nước"
            android:inputType="number" />

        <!-- Chi phí khác -->
        <EditText
            android:id="@+id/etChiPhiKhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chi phí khác"
            android:inputType="number" />

        <!-- Tổng tiền -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng hóa đơn: 0"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnTinhTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÍNH TIỀN"
                android:layout_marginLeft="20dp"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Ghi chú -->
        <EditText
            android:id="@+id/etGhiChu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ghi chú"
            android:inputType="textMultiLine" />

        <!-- Đã thanh toán -->
        <CheckBox
            android:id="@+id/cbDaThanhToan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đã thanh toán"
            android:paddingTop="8dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnThem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="THÊM"
                android:backgroundTint="@color/blue"
                android:textColor="@android:color/white" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="HỦY"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>